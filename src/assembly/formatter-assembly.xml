<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
  	http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>formatter</id>

	<formats>
		<format>zip</format>
	</formats>
	<files>
		<file>
			<source>${project.basedir}/README.md</source>
			<outputDirectory></outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/src/test/resources/formatter.properties</source>
			<outputDirectory>conf</outputDirectory>
		</file>
		<file>
			<source>${project.build.directory}/formatter/bin/formatter.sh</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
			<lineEnding>unix</lineEnding>
		</file>
		<file>
			<source>${project.build.directory}/formatter/bin/formatter.bat</source>
			<outputDirectory>bin</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/formatter/jar</directory>
			<outputDirectory>jar</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/resources/template</directory>
			<outputDirectory>conf/template</outputDirectory>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/test/resources/input</directory>
			<outputDirectory>input</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/conf</directory>
			<outputDirectory>conf</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>