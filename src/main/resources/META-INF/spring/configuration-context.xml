<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertiesFileName" class="java.lang.String">
        <constructor-arg value="classpath:formatter.properties"/>
    </bean>

    <bean id="applicationProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" ref="propertiesFileName"/>
    </bean>

    <bean id="propertyPlaceholderConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="applicationProperties"/>
    </bean>

    <bean id="properties" class="org.apache.camel.component.properties.PropertiesComponent">
        <property name="location" ref="propertiesFileName"/>
        <property name="propertiesResolver" ref="propertiesResolver"/>
    </bean>

    <bean id="propertiesResolver" class="murex.repoallocation.service.RepoAllocationPropertyResolver"/>

</beans>